<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- Load TypeKit JS for custom font -->
    <script type="text/javascript" src="http://use.typekit.com/irl4iyd.js"></script>
    <script type="text/javascript">    try { Typekit.load(); } catch (e) { }</script>
    <!-- Load bundled JS -->
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
    <!-- load other JS -->
    <script type="text/javascript" src="/Scripts/AjaxLogin.js"></script>
    <script type="text/javascript" src="/Scripts/app.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.masonry.min.js"></script>
    <script type="text/javascript" src="/Scripts/cssfx.min.js"></script>

    <!-- provide standard conforming functionality to IE -->
    <!--[if IE]>
	    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <script src="/Scripts/selectivizr-min.js"></script>
        <link href="/Content/style_ie.css" rel="stylesheet" type="text/css" class="cssfx" media="screen"/>
	<![endif]-->

    <!-- Load CSS for page and JQuery UI elements -->   
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" class="cssfx" media="screen"/>
    <link href="@Url.Content("~/Content/themes/metro/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />

    <!-- include page-specific JS -->
    @RenderSection("js", required: false)
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h1 id="logo">BoxOffice</h1>
    <section id="login">
        @Html.Partial("_LoginPartial")
    </section>
    <header>
        <nav>
            <ul>
                <li><a id="search" href="javascript:showMovieSearch();">Q</a></li>
                <li><a id="home" href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a id="movies" href="@Url.Action("Index", "Movies")">Movies</a></li>
                <li><a id="genres" href="@Url.Action("index", "Genres")">Genres</a></li>
                <li><a id="me" href="@Url.Action("Index", "Users")">Me</a></li>
            </ul>
            @RenderSection("subMenu", false)
        </nav>
        <section id="searchField" class="hidden">
            <form action="/Movies/Search" method="post" id="searchForm">
            <input type="text" name="searchTerm" id="searchTerm" value="" size="10" maxlength="30" />
            <input type="submit" value="Search" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
            </form>
        </section>
    </header>
    <section id="body" class=" ">
        @RenderBody()
    </section>
    <footer>
        <p class=" ">&copy; 2012 Robert Wawrzyniak &mdash; All rights reserved</p>
    </footer>
</body>
</html>
